@page
@model DSVBooking.Pages.FormModel
@{
}
<link href="~/css/form.css" rel="stylesheet" />


<body>
    <container-sm>
        <div class="text-center">
            <h1>Book lokale</h1>
            <p>Du kan booke lokalet mellem 7:00-17:00</p>
        </div>

        <div class="card shadow-sm">
            <div class="card-body text-center">
    <form method="post">
        <div class="form-group">
            <label for="inputDateTime"></label>
                        <input type="datetime-local" asp-for="Booking.StartDateTime" id="inputForm" aria-describedby="dateTimeHelp" placeholder="Enter Date/Time" step="3600">
                        <input type="datetime-local" asp-for="Booking.EndDateTime" id="inputForm" aria-describedby="dateTimeHelp" placeholder="Enter end time" step="3600" />
        </div>
            <div class="form-group mt-2">
                        <select name="Lokale" asp-for="Booking.RoomID" id="Lokale">
                            <option value="">Select a room</option>
                            <option value="Alpha">Alpha</option>
                            <option value="Beta">Beta</option>
                            <option value="Charlie">Charlie</option>
                            <option value="Delta">Delta</option>
                            <option value="Echo">Echo</option>
                            <option value="Foxtrot">Foxtrot</option>
                        </select>
                <label for="inputComment"></label>
                <input type="text" asp-for="Booking.Comment" id="inputForm" aria-describedby="textHelp" placeholder="Enter a comment" value="">
                <small id="commentHelp" class="form-text text-muted mt-5">Enter any comments or special requests for the staff here.  </small>
            </div>
        <button type="submit" class="btn btn-primary mt-5">Submit</button>
    </form>
    </<div>
    </div>
    </container-sm>
    <script> 
        var rooms=document.getElementById("Lokale");
           rooms.value=getQueryParameter("roomname");




     function getQueryParameter(name) {

          const urlParams = new URLSearchParams(window.location.search);

          return urlParams.get(name);

        }


    </script>
</body>