@page
@model DSVBooking.Pages.FormModel
@{
}
<link href="~/css/form.css" rel="stylesheet" />


<body>
    <container-sm>
        <div class="card shadow-sm">
            <div class="card-body text-center">
    <form method="post">
        <div class="form-group">
            <label for="inputDateTime"></label>
                        <input type="datetime-local" asp-for="Booking.StartDateTime" id="inputForm" aria-describedby="dateTimeHelp" placeholder="Enter Date/Time" step="3600">
                        <input type="datetime-local" asp-for="Booking.EndDateTime" id="inputForm" aria-describedby="dateTimeHelp" placeholder="Enter end time" step="3600" />
        </div>
            <div class="form-group mt-2">
                <label for="inputComment"></label>
                <input type="text" asp-for="Booking.Comment" id="inputForm" aria-describedby="textHelp" placeholder="Enter a comment" value="">
                <small id="commentHelp" class="form-text text-muted">Enter any comments or special requests for the staff here.  </small>
            </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    </<div>
    </div>
    </container-sm>
</body>