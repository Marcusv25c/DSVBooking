@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link href="~/css/site.css" rel="stylesheet" />

<!--Filtrering-->
<body class="container-fluid bg-light">
    <h3 class="d-inline-block" style="font-weight: bold; color: #192862">Filtrering</h3>
    <form method="filter">
        <label for="whiteboard">Whiteboard: </label>
        <input class="me-4" type="checkbox" id="whiteboard" name="whiteboard" value="true">
        <label for="smartboard">Smartboard: </label>
        <input class="me-4" type="checkbox" id="smartboard" name="smartboard" value="true">
        <label for="capacity">Antal deltagere: </label>
        <input type="number" id="capacity" name="capacity" />
         <button type="submit" class="btn btn-primary">Apply Filters</button>
    </form>
</body>

    <div class="container">

        <!--FILTER FORM-->
    <form method="get">
        <div class="row">
            <!-- Capacity Filter -->
            <div class="col">
                <label for="capacity">Minimum Capacity:</label>
                <input type="number" name="capacity" class="form-control" value="@*@Model.FilterCapacity*@" />
            </div>

            <!-- Whiteboard Filter -->
            <div class="col">
                <label for="whiteboard">Whiteboard:</label>
                <select name="whiteboard" class="form-control">
                    <option value="">Any</option>
                    <option value="true" selected="@* @(Model.FilterWhiteboard == true ? "selected" : null) *@">Yes</option>
                    <option value="false" selected="@* @(Model.FilterWhiteboard == false ? "selected" : null) *@">No</option>
                </select>
            </div>

            <!-- Submit Button -->
            <div class="col align-self-end">
                <button type="submit" class="btn btn-primary">Apply Filters</button>
            </div>
        </div>
    </form>

    <!--ROOM CARDS-->
        <div class="row row-cols-3">
            @foreach (var room in Model.Rooms)
            {
         
                 <form method="post">
                <div class="col">
                    <div class="card shadow-sm">
                        <div class="card-body text-start">
                          
                            <h5 class="card-title text-center"><b>@room.Name</b></h5>
                            <img src="Media/@room.ImgPath" class="card-img-top" alt="Room Image">
                            @*  <p class="card-text"><i>Max @room.Capacity personer.</i></p> *@
                            <div class="row">
                                <div class="col mt-1">
                                    <p class="card-text">Max: @room.Capacity personer </p>
                                    <p class="card-text">Whiteboard @(room.Whiteboard ? "✅" : "❌")</p>
                                    <p class="card-text">Smartboard: @(room.SmartBoard ? "✅" : "❌")</p>

                                </div>

                                <div class="col">
                                    <div class="d-flex justify-content-end gap-3 mt-2">
                                        <input type="hidden" value="@room.ID" name="idroom"/>
                                        <button class="btn btn-outline-primary" title="Book" @* onclick="@Model.BookRoom(room.ID)" *@>
                                        Book room
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class=" row row-cols-5">
                            @for (int i = 7; i < 17; i++)
                            {
                                var bgColor = Model.BookChecker(i, room.ID) ? "color: red;" : "color: green;";
                                <div class="col" style="@bgColor">
                                    <p>@i:00</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                </form>

            }
        </div>
        </div>

    </div>
